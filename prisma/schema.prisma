generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  price       Float
  description String   @default("")
  imageUrl    String   @default("") @map("image_url")
  stock       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("products")
}
