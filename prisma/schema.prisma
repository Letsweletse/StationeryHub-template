model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  whatsapp  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  carts     Cart[]
}

model Cart {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, productId])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String?
  category    String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  
  carts       Cart[]
}
