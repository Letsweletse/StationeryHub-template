import { NextResponse } from 'next/server';
import { createClient } from '@/utils/supabase/server';

export async function POST(
  request: Request,
  { params }: { params: { id: string } }
) {
  try {
    const supabase = createClient();
    const { quantity, customerMessage } = await request.json();

    // Get product details
    const { data: product, error: productError } = await supabase
      .from('products')
      .select('*')
      .eq('id', params.id)
      .single();

    if (productError || !product) {
      return NextResponse.json(
        { error: 'Product not found' },
        { status: 404 }
      );
    }

    // Get user session for customer info
    const { data: { session } } = await supabase.auth.getSession();
    let customerName = 'Guest';
    let customerPhone = '';

    if (session) {
      const { data: profile } = await supabase
        .from('profiles')
        .select('full_name, phone')
        .eq('id', session.user.id)
        .single();
      
      customerName = profile?.full_name || 'Registered Customer';
      customerPhone = profile?.phone || '';
    }

    // Create WhatsApp message
    const totalPrice = product.price * quantity;
    const whatsappMessage = `ðŸ›’ *NEW ORDER REQUEST* ðŸ›’

*Product:* ${product.name}
*Quantity:* ${quantity}
*Unit Price:* P ${product.price.toFixed(2)}
*Total Price:* P ${totalPrice.toFixed(2)}

*Customer:* ${customerName}
${customerPhone ? `*Phone:* ${customerPhone}` : ''}
${customerMessage ? `*Message:* ${customerMessage}` : ''}

*Order Details:*
ðŸ“¦ Product: ${product.name}
ðŸ’° Price: P ${product.price.toFixed(2)} each
ðŸ”¢ Quantity: ${quantity}
ðŸ’µ Total: P ${totalPrice.toFixed(2)}

_This order was placed via StationeryHub website_`;

    const phoneNumber = '26775560140'; // Your business number
    const encodedMessage = encodeURIComponent(whatsappMessage);
    const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;

    // Save order inquiry to database
    const { error: orderError } = await supabase
      .from('order_inquiries')
      .insert([{
        product_id: params.id,
        product_name: product.name,
        quantity,
        total_price: totalPrice,
        customer_name: customerName,
        customer_phone: customerPhone,
        customer_message: customerMessage,
        whatsapp_url: whatsappUrl
      }]);

    if (orderError) {
      console.error('Failed to save order inquiry:', orderError);
    }

    return NextResponse.json({
      success: true,
      message: 'WhatsApp order created successfully',
      whatsapp_url: whatsappUrl,
      order_details: {
        product: product.name,
        quantity,
        total_price: totalPrice,
        customer_name: customerName
      }
    });
  } catch (error) {
    console.error('WhatsApp order error:', error);
    return NextResponse.json(
      { error: 'Failed to create WhatsApp order' },
      { status: 500 }
    );
  }
}
